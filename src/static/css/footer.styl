#footer-container
  .advert-wrap
    height 150px
    display flex
    width 100%
    align-items center
    justify-content center
    h2
      color #333
      font-size 22px
      margin 0 30px 0 0
      font-weight 500
      letter-spacing .5px
    .install-btn
      border-radius .3em
      font-size 14px
      font-weight 500
      letter-spacing .5px
      padding 12px 30px
      background #0E9EE4
      cursor pointer
      outline none
      border none
      color white
      transition background .3s
      &:hover
        background #11aaf5

  .footer
    background #1c2639
    height 200px
    width 100%
    .footer-content
      width 90%
      margin 0 auto
      height fit-content
      padding 50px 0
      .logo-wrap
        display flex
        justify-content left
        margin 0 auto
        width fit-content
        .logo
          background-image url("https://markdown-images-369543.s3-us-west-2.amazonaws.com/Logo/PNG/markdown-02.png")
          background-size cover
          background-position center
          background-repeat no-repeat
          width 30px
          height 30px
          margin-right 15px
          margin-top -2px
        .title
          color white
          font-size 20px
          margin 0
          letter-spacing .3px
      .sm-wrap
        display flex
        justify-content center
        align-items center
        margin 40px auto 0
        .sm-icon
          background-position center
          background-repeat no-repeat
          background-size cover
          width 22px
          height 22px
          margin 0 40px
          cursor pointer
          opacity .5
          transition opacity .3s
          &:hover
            opacity .9

@media only screen and (max-width: 625px)
  #footer-container
    .advert-wrap
      flex-flow column wrap
      h2
        margin 0 0 15px

@media only screen and (max-width: 600px)
  #footer-container
    .footer
      .sm-wrap
        .sm-icon
          margin 0 25px !important

@media only screen and (max-width: 430px)
  #footer-container
    .advert-wrap
      h2
        font-size 20px !important
