.footer
  background #1e232e
  height 100px
  margin-top 35px
  overflow hidden
  position relative
  box-shadow 0 0 8px 3px rgba(0,0,0,0.1)
  .all-rights-reserved
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    text-align center
    color white
    margin 0
    font-size 15px
    .splitter
      color lightgrey
      font-weight 200
      font-size 20px
      marign-top 1px
    .website-link
      color #02c26e
      font-size 15px
      text-decoration none
      transition color .3s
      &:hover
        color #2efaa1
