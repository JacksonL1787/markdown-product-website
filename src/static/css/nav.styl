.navbar
  width 100%
  height 100px
  position relative
  z-index 5
  &.compress
    .nav-links
      .link
        display none !important
    .install-btn
      display none !important
    .menu-btn
      display block !important
  .nav-content
    width calc(100% - 80px)
    margin 0 auto
    position relative
    height 100%
    display flex
    justify-content space-between
    align-items center
    .left
      display flex
      justify-content left
      align-items center
      .logo-wrap
        display flex
        justify-content left
        cursor pointer
        .logo
          background-image url("https://markdown-images-369543.s3-us-west-2.amazonaws.com/Logo/PNG/markdown-02.png")
          background-size cover
          background-position center
          background-repeat no-repeat
          width 30px
          height 30px
          margin-right 12px
          margin-top -2px
        .title
          color #183149
          font-size 20px
          margin 0
          letter-spacing .3px
      .divider
        height 40px
        margin 0 20px
      .nav-links
        display flex
        justify-content left
        .link
          margin 0 40px 0 0
          color #484848
          cursor pointer
          font-size 16px
          font-weight 400
          text-decoration none
          transition color .3s
          &:hover,
          &.active
            color #0E9EE4
    .right
      .menu-btn
        cursor pointer
        display none
        &:hover
          .bar
            background #11aaf5 !important
        .bar
          height 3px
          width 28px
          background #183149
          margin 5px 0
          transition background .3s
      .install-btn
        width 180px
        height 45px
        position relative
        border-radius .3em
        background #0E9EE4
        cursor pointer
        transition background .3s
        &:hover
          background #11aaf5
        .btn-text
          color white
          font-weight 500
          font-size 14px
          position absolute
          top calc(50% + 1px)
          letter-spacing .5px
          left 50%
          margin 0
          width fit-content
          transform translate(-50%, -50%)

.navbar-side-menu
  background #232F46
  width 100%
  z-index 100
  height 100%
  position fixed
  top 0
  right -100%
  transition right .3s
  &.active
    right 0
  .close-btn
    background-image url("https://markdown-images-369543.s3-us-west-2.amazonaws.com/markdown-lander-assets/white-close.svg")
    background-size cover
    background-position center
    background-repeat no-repeat
    width 30px
    height 30px
    opacity .2
    cursor pointer
    margin 40px auto 0
    transition opacity .3s
    &:hover
      opacity 1
  .nav-links
    text-align center
    margin-top 50px
    .link
      color #65779B
      font-size 35px
      font-weight 600
      letter-spacing .5px
      margin 30px 0
      display block
      text-decoration none
      transition color .3s
      &:hover,
      &.active
        color #D9DFEA
  .install-btn
    background #192234
    font-size 16px
    color white
    cursor pointer
    font-weight 500
    letter-spacing .5px
    padding 14px 40px
    margin 60px auto 0
    border-radius .5em
    border none
    outline none
    display block
    transition background .3s
    &:hover
      background #3d4c6b
