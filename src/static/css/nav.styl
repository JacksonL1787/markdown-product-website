.navbar
  position fixed
  top 0
  left 0
  z-index 5
  width 100%
  height 75px
  &.active
    background #191d26
    box-shadow 0 0 12px 3px rgba(0,0,0,0.1)
  .nav-content
    width 90%
    margin 0 auto
    position relative
    height 100%
    .logo
      background-image url('https://markdown-images-369543.s3-us-west-2.amazonaws.com/white-logo-transparent.png')
      background-size cover
      background-position center
      background-repeat no-repeat
      width 37px
      height 37px
      position absolute
      top 50%
      left 0
      transform translateY(-50%)
    .nav-links
      display flex
      justify-content right
      position absolute
      width fit-content
      height fit-content
      align-items center
      right 0
      top 50%
      transform translateY(-50%)
      .link
        margin 0 15px
        &:hover,
        &.active
          p
            color white
        p
          color rgba(255,255,255,0.6)
          font-size 15px
          margin 0
          cursor pointer
          letter-spacing .3px
          transition color .2s
      .install-btn
        color #39ed9f
        border 1px solid #00c06c
        cursor pointer
        border-radius .3em
        font-weight 600
        letter-spacing .5px
        font-size 15px
        background rgba(0, 193, 108, 0.1)
        outline none
        padding 8px 20px
        margin-left 20px
        transition background .3s
        &:hover
          background rgba(0, 193, 108, 0.2)
